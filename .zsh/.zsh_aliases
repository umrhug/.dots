## .zsh_aliases
#
alias h='history'
alias pu='pushd'
alias po='popd'
alias jo='jobs -l'
#
alias ls='/bin/ls -G'
alias l='/bin/ls -CF'
alias ll='/bin/ls -h -CF -l'
alias la='/bin/ls -CF -A'
alias l1='/bin/ls -1'
#
alias cp='/bin/cp -i'
alias mv='/bin/mv -i'
alias rm='/bin/rm -i'
#
alias df='/usr/bin/df -h'
alias du='/usr/bin/du -h'
#
alias grep='/usr/bin/grep --color=always'
alias mkdir='/bin/mkdir -p'
#
alias ctags='/usr/local/bin/ctags'
#
alias path='echo -e ${PATH//:/\\n}'
alias ..='cd ..'

export LESS='-R'
